{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strictNullChecks": true,
        "paths": {
            "@modules/repository": ["../modules/repository/index.ts"]
        }
    },
    "include": ["*.ts", "./src/**/*.ts"],
    "exclude": ["**/dist/**", "**/node_modules/**"],
    "references": [{ "path": "../modules/repository" }]
}
