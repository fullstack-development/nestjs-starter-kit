{
    "name": "polka-launchpad-api-tests",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "postinstall": "yarn prisma:generate && ./postinstall.sh",
        "test": "jest",
        "test:local": "bash run.local.sh --ganache docker",
        "prisma:prepare": "cp -rf $INIT_CWD/../schema.prisma $INIT_CWD/src/schema.prisma",
        "prisma:generate": "yarn prisma:prepare && npx prisma generate --schema=\"./src/schema.prisma\""
    },
    "keywords": [],
    "author": "",
    "license": "UNLICENSED",
    "dependencies": {
        "@golevelup/ts-jest": "^0.3.3",
        "@jest/test-sequencer": "^29.2.1",
        "@prisma/client": "^3.14.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/jest": "^29.0.3",
        "@types/node": "^18.7.18",
        "@typescript-eslint/eslint-plugin": "^5.37.0",
        "@typescript-eslint/parser": "^5.37.0",
        "body-parser": "^1.20.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cookie": "^0.5.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-deprecation": "^1.3.2",
        "eslint-plugin-prettier": "^4.2.1",
        "express": "^4.18.2",
        "ganache-cli": "^6.12.2",
        "jest": "^29.0.3",
        "node-fetch": "^2.6.7",
        "pactum": "^3.2.2",
        "pg": "^8.8.0",
        "prettier": "^2.7.1",
        "prisma": "^3.14.0",
        "ramda": "^0.28.0",
        "reflect-metadata": "^0.1.13",
        "ts-jest": "^29.0.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.8",
        "uuid": "^9.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "moduleDirectories": [
            "<rootDir>/node_modules",
            "<rootDir>/src"
        ],
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "coverage",
        "testEnvironment": "node",
        "setupFiles": [
            "./jest-setup-file.ts"
        ],
        "modulePathIgnorePatterns": [
            "<rootDir>/.polka-fantasy-launchpad-sc"
        ],
        "testSequencer": "./testSequencer.js",
        "testTimeout": 60000
    },
    "devDependencies": {
        "@types/cookie": "^0.5.1",
        "@types/pg": "^8.6.5",
        "@types/ramda": "^0.28.18",
        "@types/uuid": "^8.3.4"
    }
}
