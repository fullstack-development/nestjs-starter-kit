{
    "name": "nestjs-starter-kit",
    "version": "5.0.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "MIT",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.{ts,json}\" \"libs/**/*.{ts,json}\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "typeorm:generate": "node ./scripts/typeorm/migrationGenerate.js",
        "typeorm:up": "node ./scripts/typeorm/migrationUp.js",
        "api:dev": "NODE_ENV=development APP=api nest start api --watch",
        "api:prod": "NODE_ENV=production APP=api node dist/apps/api/apps/api/src/main.js",
        "react-admin-adapter:dev": "NODE_ENV=development APP=react-admin-adapter nest start react-admin-adapter --watch",
        "test": "jest"
    },
    "dependencies": {
        "@golevelup/ts-jest": "^0.5.0",
        "@nestjs-cls/transactional": "^2.3.1",
        "@nestjs-cls/transactional-adapter-typeorm": "^1.2.1",
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/typeorm": "^10.0.2",
        "@types/crypto-js": "^4.2.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cookie-parser": "^1.4.6",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.4.5",
        "nestjs-cls": "^4.3.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.12.0",
        "ramda": "^0.30.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.3.8",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/passport-jwt": "^4.0.1",
        "@types/ramda": "^0.30.0",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "prettier-plugin-organize-imports": "^3.2.4",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/libs/",
            "<rootDir>/apps/"
        ],
        "moduleNameMapper": {
            "^@lib/repository(|/.*)$": "<rootDir>/libs/repository/src/$1",
            "^@lib/core(|/.*)$": "<rootDir>/libs/core/src/$1"
        }
    }
}
