{
    "name": "nestjs-starter-kit",
    "version": "3.0.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "main": "./src/main.ts",
    "scripts": {
        "prepare": "node buildPrepare.js",
        "build": "rimraf dist && yarn prepare && nest build --webpack --webpackPath webpack.references.config.js",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:dev": "yarn prepare && cross-env NODE_ENV=development nest start --webpack --webpackPath webpack.references.config.js --watch",
        "start:debug": "yarn prepare && cross-env NODE_ENV=development nest start --webpack --webpackPath webpack.references.config.js --debug --watch",
        "start:prod": "yarn prepare && cross-env NODE_ENV=production node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "cross-env TEST=true jest",
        "test:coverage": "cross-env TEST=true jest --coverage"
    },
    "dependencies": {
        "@medibloc/nestjs-request-context": "^1.0.0",
        "@nestjs/common": "^9.0.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/jwt": "^9.0.0",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/schedule": "^2.1.0",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "date-fns": "^2.29.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.2",
        "node-fetch": "^2.6.7",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "ramda": "^0.27.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.5.0",
        "uuid": "^8.3.2",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@golevelup/ts-jest": "^0.3.2",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.13",
        "@types/jest": "28.1.8",
        "@types/node": "^16.0.0",
        "@types/node-fetch": "^2.6.2",
        "@types/passport-jwt": "^3.0.7",
        "@types/ramda": "^0.27.39",
        "@types/supertest": "^2.0.11",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^8.3.0",
        "@types/yamljs": "^0.2.31",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-deprecation": "^1.2.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "28.1.3",
        "prettier": "^2.3.2",
        "prettier-plugin-organize-imports": "^3.2.1",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "28.0.8",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.0",
        "typescript": "^4.9.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "moduleDirectories": [
            "<rootDir>/node_modules",
            "<rootDir>/src",
            "<rootDir>/../modules/repository",
            "<rootDir>/../modules/repository/node_modules"
        ],
        "modulePathIgnorePatterns": [
            "<rootDir>/dist/",
            "<rootDir>/eslint-plugin/",
            "<rootDir>/migrations/",
            "<rootDir>/coverage/"
        ],
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "coverage",
        "testEnvironment": "node",
        "setupFiles": [
            "./jest-setup-file.ts"
        ],
        "moduleNameMapper": {
            "@modules/repository": "<rootDir>/../modules/repository"
        }
    }
}
