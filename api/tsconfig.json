{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "allowJs": true,
        "paths": {
            "@lib/repository": ["../libs/repository/src/index.ts"],
            "@lib/core": ["../libs/core/src/index.ts"],
            "@lib/utils": ["../libs/core/utils/index.ts"],
            "@lib/testing": ["../libs/core/testing/index.ts"]
        }
    },
    "include": ["*.ts", "./src/**/*.ts"],
    "exclude": ["**/migrations/**", "**/dist/**", "**/node_modules/**"],
    "references": [{ "path": "../libs/repository" }, { "path": "../libs/core" }]
}
