{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strictNullChecks": true
    },
    "include": ["*.ts", "./src/**/*.ts", "./api-tests/**/*.ts"],
    "exclude": ["**/migrations/**", "**/dist/**", "**/node_modules/**"]
}
