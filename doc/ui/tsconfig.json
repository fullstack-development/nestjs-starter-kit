{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strictNullChecks": true,
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": ["*.ts", "*.tsx", "./**/*.ts", "./**/*.tsx"],
    "exclude": ["**/dist/**", "**/node_modules/**"]
}
